{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}
{{#post}}
  {{#has tag="brandpage"}}
    {{> brandpage}}
  {{else}}

{{! Everything inside the #post tags pulls data from the page }}

    {{#has tag="gsoc"}}
      {{> gsoc}}
    {{else}}
      <header class="biojs-grey biojs-white-text">
        <div class="container">
          <div class="row">
            <div class="col s12 mt-1 mb-2">
              <h1 class="light">{{title}}</h1>
            </div>
          </div>
        </div>
      </header>
      <main class="content" role="main">
          <article class="{{post_class}} container"> 

              <section class="post-content">
                  {{content}}
                  <p class="mt-2"><a href="/" class="btn action go-home"><i class="material-icons small">home</i><span>Go back Home</span></a></p>
              </section>

          </article>
      </main>
    {{/has}}
  {{/has}}
{{/post}}

